<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.design.widget.TabLayout
        android:id="@+id/times_fragment.tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="@dimen/tab_layout_elevation"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabIndicatorColor="@color/defaultTextColor"
        app:tabSelectedTextColor="@color/defaultTextColor"
        app:tabTextColor="@color/defaultTextColor"
        app:tabTextAppearance="@style/tab_text" >

        <android.support.design.widget.TabItem
            android:id="@+id/times_fragment.tab_layout.tab1"
            android:text="SEGUNDA A SEXTA"
            android:layout_height="match_parent"
            android:layout_width="wrap_content" />

        <android.support.design.widget.TabItem
            android:id="@+id/times_fragment.tab_layout.tab2"
            android:text="SÁBADO"
            android:layout_height="match_parent"
            android:layout_width="wrap_content" />

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/times_fragment.view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/times_fragment.tab_layout"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>